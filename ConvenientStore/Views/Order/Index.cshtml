@{
    ViewBag.Title = "Đơn hàng của tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var order = (List<Models.ViewModel.OrderViewModel>)ViewBag.Order;
}
<!---->
<!--banner-->
<div class="banner-top">
    <div class="container">
        <h3>Đơn hàng của tôi</h3>
        <h4><a href="#">Trang chủ</a><label>/</label>Đơn hàng của tôi</h4>
        <div class="clearfix"> </div>
    </div>
</div>
@if (order.Count == 0)
{
    <div class="content-top offer-w3agile">
        <div class="container ">
            <div class="spec ">
                <h3>Chưa có đơn hàng</h3>
            </div>
        </div>
    </div>
}
else
{
    <!---->
    <div class="content-top offer-w3agile">
        <div class="container ">
            <div class="spec ">
                <h3>Đơn hàng của tôi</h3>
                <div class="ser-t">
                    <b></b>
                    <span><i></i></span>
                    <b class="line"></b>
                </div>
            </div>
            <div class=" con-w3l wthree-of">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Tên sản phẩm</th>
                            <th>Ảnh minh họa</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Tổng tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in order)
                        {
                            var url = "/san-pham/chi-tiet/" + item.metaTitle + "/" + item.productID;
                        <tr>
                            <td>@item.billID</td>
                            <td><a href="@url" class="btn btn-success">@item.name</a></td>
                            <td align="center">
                                <img src="@item.image" alt="Ảnh minh họa sản phẩm" width="50px" height="50px" />
                            </td>
                            <td>@item.quantity</td>
                            <td>@item.price<sup>đ</sup></td>
                            <td>@(item.quantity*item.price)<sup>đ</sup></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
         </div>
    </div>
}
