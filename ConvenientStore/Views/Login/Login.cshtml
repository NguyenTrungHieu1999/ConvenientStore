@model ConvenientStore.Areas.Admin.Models.LoginModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login";
}
<style>
    .text-danger {
        color: #e74a3b !important;
    }

    a.text-danger:hover, a.text-danger:focus {
        color: #be2617 !important;
    }
</style>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<body>
    <!--banner-->
    <div class="banner-top">
        <div class="container">
            <h3>Đăng nhập</h3>
            <h4><a href="#">Trang chủ</a><label>/</label>Đăng nhập</h4>
            <div class="clearfix"> </div>
        </div>
    </div>
    <!--login-->

    <div class="login">

        <div class="main-agileits">
            <div class="form-w3agile">
                <h3>Login</h3>
                @{ Html.BeginForm("Login", "Login", FormMethod.Post);}
                @*<form action="#" method="post">*@
                Tên tài khoản
                <div class="key">
                    <i class="fa fa-user" aria-hidden="true"></i>
                    @Html.TextBoxFor(model => model.UserName, new {placeholder = "Tên tài khoản" })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    @*<input type="text" value="Email" name="Email" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Email';}" required="">*@
                    <div class="clearfix"></div>
                </div>
                Mật khẩu
                <div class="key">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                    @Html.PasswordFor(model => model.Password, new { placeholder = "Mật khẩu" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    @*<input type="password" value="Password" name="Password" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Password';}" required="">*@
                    <div class="clearfix"></div>
                </div>
                @if (ViewBag.ThongBao != null)
                {
                    <p style="color:red; text-align:center; margin-bottom:20px;">@ViewBag.ThongBao</p>
                }
                <input type="submit" value="Đăng nhập" class="center-block">
                @*</form>*@
                @{ Html.EndForm();}
            </div>
            <div class="forg">
                <a href="~/Login/PasswordEmail" class="forg-left">Quên mật khẩu</a>
                <a href="~/Login/Register" class="forg-right">Đăng ký</a>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</body>