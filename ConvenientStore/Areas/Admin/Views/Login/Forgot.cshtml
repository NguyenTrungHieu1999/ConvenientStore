@model ConvenientStore.Areas.Admin.Models.LoginModel
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SB Admin 2 - Forgot</title>
    <!-- Custom fonts for this template-->
    <link href="~/Asset/Admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/Asset/Admin/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-primary">
    @{ Html.BeginForm("Forgot", "Login", FormMethod.Post);}
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Đổi mật khẩu</h1>
                                    </div>
                                    <form class="user" style=" display:block;">
                                        <div>
                                            @Html.TextBoxFor(model=>model.UserName, new { Style = "width:100%; border-radius:5px; font-height:", placeholder = "Username" })
                                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                        </div>
                                        <div>
                                            @Html.PasswordFor(model=>model.Password, new { Style = "width:100%; border-radius:5px;margin-top: 5%; margin-bottom: 5%;", placeholder = "Password" })
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                        </div>
                                        <input class="btn btn-primary btn-user btn-block" type="submit" value="Đổi mật khẩu" />
                                        @if (ViewBag.ThongBao != null)
                                        {
                                            <p style="color:red; text-align:center;">@ViewBag.ThongBao</p>
                                        }
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @{Html.EndForm();}
    <!-- Bootstrap core JavaScript-->
    <script src="~/Asset/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Asset/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Asset/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/Asset/Admin/js/sb-admin-2.min.js"></script>
</body>
</html>
